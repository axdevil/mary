<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link rel="stylesheet" href="/stylesheets/login.css">

    <title>Registrarse</title>
</head>
<body>
    <div class="box">
        <div>
            Registrarse
        </div>
        <form action="/patient/validateSignUp" method="post">
            <% if (backError.length == 0) { %>
                <div class="textBlack">
                    <input type="text" name="email" id="email" required>
                    <label for="email">Correo electronico</label>
                </div>    
            <% } else { %>
                <div class="textAlert">
                    <input type="text" name="email" id="email" value="<%= body.email %>" required>
                    <label for="email">Correo electronico</label>
                </div>    
            <% } %>
            <div class="textBlack" >
                <input type="text" name="name" id="name" value="<%= body.name %>" required>
                <label for="name">Nombre(s)</label>
            </div>
            <div class="textBlack" >
                <input type="text" name="lastname" id="lastname" value="<%= body.lastname %>" required>
                <label for="lastname">Apellido(s)</label>
            </div>
            <div class="textBlack" >
                <select name="gender" id="gender" required>
                    <% if (body.gender == "M") { %>
                        <option value="M" selected>Masculino</option>
                        <option value="F">Femenino</option>
                    <% } else if(body.gender == "F"){ %>
                        <option value="F" selected>Femenino</option>
                        <option value="M">Masculino</option>
                    <% } else { %>
                        <option value="" selected></option>
                        <option value="M">Masculino</option>
                        <option value="F">Femenino</option>
                    <% } %>
                </select>
                <label for="gender">Genero</label>
            </div>
            <div class="textBlack" >
                <input type="password" name="password" id="password" required>
                <label for="password">Contraseña</label>
            </div>
            <div class="textBlack" >
                <input type="password" id="confirmPassword" required>
                <label for="confirmPassword">Confirmar contraseña</label>
            </div>
            <div>
                <a class="aBlack" href="/patient">Iniciar sesión</a>
                <input class="btnPrimary" type="submit" value="Crear">
            </div>
        </form>
    </div>
    <div id="errors">
        <% if (backError.length != 0) { %>
            <span class="notError"><%= backError %></span>
        <% } %>
    </div>
    <script src="/javascripts/valForm.js"></script>
</body>
</html>